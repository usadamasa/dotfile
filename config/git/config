[include]
  path = ~/.config/git/gitconfig.local
[color]
  ui = true
[page]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[pull]
  rebase = true
  ff = only
[diff]
  tool = vimdiff
[core]
  excludesfile = ~/.config/git/ignore
  ignorecase = false
[ghq]
  root = ~/src
[http]
  sslVerify = false
[merge]
  conflictStyle = diff3
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[alias]
  ac = !git add -A && aicommits -a -g 3
  mc = !git switch $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@') && git pull origin HEAD && gh poi
  oc = !git add -A && opencommit
  sw = switch
  swc = switch -c
[fetch]
  prune = true
[init]
  defaultBranch = main
